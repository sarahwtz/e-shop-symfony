

{% extends 'admin/base.html.twig' %}

{% block title %}AdminController!{% endblock %}

{% block body %}

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">

    <div class="bg-white shadow rounded-2xl p-6">
        <h2 class="text-lg font-semibold">Total Users</h2>
        <p class="text-2xl font-bold text-blue-600">{{ totalUsers }}</p>
    </div>

    <div class="bg-white shadow rounded-2xl p-6">
        <h2 class="text-lg font-semibold">Total Orders</h2>
        <p class="text-2xl font-bold text-green-600">{{ totalOrders }}</p>
    </div>

    <div class="bg-white shadow rounded-2xl p-6">
        <h2 class="text-lg font-semibold">Total Revenue</h2>
        <p class="text-2xl font-bold text-purple-600">
            ${{ totalRevenue|number_format(2) }}
        </p>
    </div>

</div>


<div class="grid grid-cols-1 md:grid-cols-2 gap-6">

    <div class="bg-white p-6 rounded-2xl shadow">
        <h3 class="text-lg font-bold mb-4">Yearly Product Sales</h3>
        <canvas id="productChart"></canvas>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow">
        <h3 class="text-lg font-bold mb-4">Monthly Orders</h3>
        <canvas id="monthlyChart"></canvas>
    </div>

</div>

{% block javascripts %}
{{ parent() }}

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
window.addEventListener('DOMContentLoaded', () => {

    const productCtx = document.getElementById('productChart')?.getContext('2d');

    if (productCtx) {
        new Chart(productCtx, {
            type: 'bar',
            data: {
                labels: {{ productLabels|json_encode|raw }},
                datasets: [{
                    label: 'Units Sold',  // legenda do dataset
                    data: {{ productData|json_encode|raw }},
                    backgroundColor: 'rgba(59, 130, 246, 0.7)',
                    borderRadius: 6
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }

    const monthlyCtx = document.getElementById('monthlyChart')?.getContext('2d');

    if (monthlyCtx) {
        new Chart(monthlyCtx, {
            type: 'line',
            data: {
                labels: {{ monthlyLabels|json_encode|raw }},
                datasets: [{
                    label: 'Orders This Month',
                    data: {{ monthlyValues|json_encode|raw }},
                    fill: false,
                    borderColor: 'rgba(34, 197, 94, 1)',
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }

});
</script>

{% endblock %}


{% endblock %}

