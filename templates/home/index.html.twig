{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container mx-auto p-4">

    <form method="get" action="{{ path('app_home') }}" class="mb-4 relative">
        <input type="text" name="q" placeholder="Search product..." value="{{ query }}"
               class="w-full p-2 border border-gray-300 rounded bg-white">
        <button type="submit"
                class="text-gray-500 font-medium hover:text-blue-600 transition absolute right-0 top-0 mt-2 mr-2">
            Go!
        </button>
    </form>

    <div class="mb-4">
        <h3 class="font-semibold mb-2">Filter by Category</h3>
        <div class="flex space-x-2">
            {% for category in categories %}
                <a href="{{ path('app_home', { category: category.id }) }}"
                   class="p-2 bg-gray-200 text-gray-700 rounded">
                    {{ category.name }}
                </a>
            {% endfor %}
        </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {% for product in products %}
            <div class="bg-white rounded-2xl shadow-md border border-gray-200 p-5 transition-transform hover:-translate-y-1 hover:shadow-lg">
                <div class="w-full h-48 rounded-xl overflow-hidden mb-4">
                    <img src="{{ asset('uploads/product_images/' ~ product.image) }}"
                         alt="{{ product.name }}"
                         class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
                </div>
                <h3 class="font-semibold text-lg">{{ product.name }}</h3>
                <p class="text-gray-600 text-sm mb-4">{{ product.price|number_format(2, ',', '.') }} â‚¬</p>
                
                <div class="flex justify-between items-center space-x-2">
                    <a href="{{ path('user_product_show', {id: product.id}) }}"
                       class="flex-1 text-center py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium rounded-lg transition">
                        View Product
                    </a>

                    <form method="post">
                        <button type="button" data-id="{{ product.id }}"
                                class="add-to-cart-btn flex items-center justify-center px-4 py-2 bg-green-500 hover:bg-green-600 text-white text-sm font-semibold rounded-lg transition">
                            Add to Cart
                        </button>
                    </form>
                </div>
            </div>
        {% else %}
            <p>No products found</p>
        {% endfor %}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.add-to-cart-btn').forEach(button => {
        button.addEventListener('click', function (e) {
            e.preventDefault();
            const productId = this.dataset.id;

            fetch(`/cart/add/${productId}`, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const cartCountSpan = document.getElementById('cart-count');
                    if (cartCountSpan) {
                        cartCountSpan.innerText = data.count;
                    }
                } else {
                    alert("Failed to add to cart");
                }
            })
            .catch(error => {
                console.error("AJAX Error:", error);
            });
        });
    });
});
</script>
{% endblock %}
