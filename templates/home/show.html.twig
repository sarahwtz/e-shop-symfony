{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-green-100 py-12 px-4">
    <div class="max-w-5xl mx-auto bg-white shadow-2xl rounded-3xl overflow-hidden border border-gray-200">
        <div class="p-6">
            <a href="{{ path('app_home') }}"
                class="inline-block text-blue-600 hover:text-blue-800 font-medium text-sm underline"
            >Back to Home</a>
        </div>

        <div class="grid md:grid-cols-2 gap-10 px-10 pb-10">
            <div class="flex items-center justify-center">
                <img src="{{ asset('uploads/product_images/' ~ product.image) }}"
                     alt="{{ product.name }}"
                     class="w-full h-[600px] object-cover rounded-2xl shadow-lg"
                >
            </div>

            <div class="flex flex-col justify-between">
                <div>
                    <h1 class="text-4xl font-extrabold text-gray-900 mb-4">{{ product.name }}</h1>

                    {% if product.category %}
                        <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-medium mb-4">
                            {{ product.category.name }}
                        </span>
                    {% endif %}

                    <p class="text-2xl font-semibold text-green-600 mb-6">
                        {{ product.price|number_format(2, ',', '.') }} â‚¬
                    </p>

                    {% if product.description %}
                        <p class="text-gray-700 leading-relaxed mb-6">{{ product.description }}</p>
                    {% endif %}

                    <div class="text-sm text-gray-500 mb-2">
                        Added: {{ product.createdAt|date('d M Y H:i', 'Europe/Berlin') }}
                    </div>
                </div>
                <form action="">
                    <input type="hidden" name="_token" value="{{ csrf_token('add-to-cart' ~ product.id) }}">
                    <button class="w-full flex items-center justify-center px-4 py-2 bg-green-500 hover:bg-green-600 text-white text-sm font-semibold rounded-lg transition">
                        Add to Cart
                    </button>
               </form>    

            </div>  
        </div>
    </div>
</div>

{% endblock %}
