{% extends 'customer/base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}

<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-2xl p-6 mt-8 space-y-6 border border-gray-200">
    <h3 class="text-3xl font-bold text-gray-800  pb-3">
        Tracking Order <span class="text-indigo-600">{{ order.orderReference }}</span>
    </h3>

        <ul class="space-y-2 text-gray-700">
            <li><span class="font-semibold">Date: </span> {{ order.orderDate|date('Y-m-d H:i') }}</li>
            <li><span class="font-semibold">Status: </span>
                {% if order.isDelivered %}
                    <span class="text-green-600 font-semibold">Delivered</span>
                {% elseif order.isShipped %}
                    <span class="text-blue-600 font-semibold">Shipped</span>
                {% elseif order.isProcessed %}
                    <span class="text-yellow-600 font-semibold">Processed</span>
                {% else %}
                    <span class="text-gray-600 font-semibold">Pending</span>
                {% endif %}
            </li>

            <li><span class="font-semibold">Total: </span>
                <span class="text-green-700 font-medium">${{ order.total }}</span>
            </li>

            <li><span class="font-semibold">Payment Method: </span> {{ order.paymentMethod }}</li>
            <li><span class="font-semibold">Email: </span> {{ order.userEmail }}</li>
    </ul>

    <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-3  pb-2">Items</h2>
        <ul class="space-y-2">
            {% for history in order.cartHistories %}
                <li class="bg-gray-50 p-3 rounded-md border border-gray-200 shadow-sm">
                    <div class="text-gray-800 font-medium">
                        {{ history.productName }}
                    </div>
                    <div class="text-sm text-gray-600">
                        Ref: {{ history.order.orderReference }} —
                        Quantity: {{ history.quantity }} —
                        Subtotal:
                        <span class="font-semibold text-green-700">
                            ${{ history.subtotal }}
                        </span>
                    </div>
                </li>
                {% else %}
                    <li class="text-gray-500 italic"> No items in this order </li>
            {% endfor %}
        </ul>
   
</div>

{% endblock %}