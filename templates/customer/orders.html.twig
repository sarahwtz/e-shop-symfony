{% extends 'customer/base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}

<div class="max-w-5xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-xl border border-gray-200">

    <h1 class="text-3xl font-bold text-gray-800 mb-6">My Orders</h1>

    {% if orders is empty %}
        <p class="text-gray-600">You haven't placed any orders yet.</p>
    {% else %}
        <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-200 text-sm border-collapse">
    <thead class="bg-blue-100 text-blue-800 uppercase text-xs tracking-wider">
        <tr>
            <th class="px-4 py-3 text-left">Date</th>
            <th class="px-4 py-3 text-left">Reference</th>
            <th class="px-4 py-3 text-left">Status</th>
            <th class="px-4 py-3 text-left">Total</th>
            <th class="px-4 py-3 text-left">Track</th>
            <th class="px-4 py-3 text-left">Invoice</th>
        </tr>
    </thead>

    <tbody class="text-gray-800">
        {% for order in orders %}
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 text-indigo-600">{{ order.orderDate|date('Y-m-d') }}</td>
                <td class="px-4 py-2 font-medium text-indigo-600">{{ order.orderReference }}</td>
                <td class="px-4 py-2">
                    {% if order.isDelivered %}
                        <span class="text-green-600 font-semibold">Delivered</span>
                    {% elseif order.isShipped %}
                        <span class="text-blue-600 font-semibold">Shipped</span>
                    {% elseif order.isProcessed %}
                        <span class="text-yellow-600 font-semibold">Processed</span>
                    {% else %}
                        <span class="text-gray-600 font-semibold">Pending</span>
                    {% endif %}
                </td>
                <td class="px-4 py-2 text-green-600">${{ order.total }}</td>
                <td class="px-4 py-2">
                    {% if order.orderReference %}
                        <a href="{{path('track_order', {'ref': order.orderReference}) }}" class="text-indigo-600 hover:underline">Track</a>
                    {% else %}
                        <span class="text-gray-500 italic">No Ref</span>
                    {% endif %}
                </td>
                <td class="px-4 py-2">
                    {% if order.orderReference %}
                        <a href="{{path('generate_invoice', {'ref': order.orderReference}) }}" class="text-indigo-600 hover:underline">Invoice</a>
                    {% else %}
                        <span class="text-gray-500 italic">No Ref</span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

        </div>
    {% endif %}

</div>

{% endblock %}