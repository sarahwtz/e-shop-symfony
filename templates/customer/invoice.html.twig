{% extends 'customer/base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}

<div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-xl mt-10 border border-gray-200">

    
    <div class="flex justify-end mb-4">
        <button onclick="printInvoice()" 
                class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
            Print Invoice
        </button>
    </div>

    <div id="invoice" class="space-y-8 ">

        <h1 class="text-3xl font-bold text-gray-800  pb-2">Invoice</h1>

        <div class="text-gray-700 text-center mx-auto w-fit">
            <h2 class="text-xl font-semibold">Sample Company</h2>
            <p>123 Business St.</p>
            <p>City, State, 12345</p>
            <p>Email: 
                <a href="mailto:info@company.com" class="text-indigo-600">info@company.com</a>
            </p>
            <p>Phone: 123-456-7890</p>
        </div>

        <div class="text-gray-700">
            <h3 class="text-lg font-semibold mb-2">Order Details</h3>

            <p><strong>Order Reference:</strong> {{ order.orderReference }}</p>

            <p><strong>Order Date:</strong> 
                {{ order.orderDate|date('Y-m-d') }}
            </p>

            <p><strong>Total Amount:</strong> 
                <span class="text-green-700 font-semibold">
                    ${{ order.total }}
                </span>
            </p>
        </div>

        <h3 class="text-lg font-semibold mb-3 text-gray-800">Products</h3>

       <div class="overflow-x-auto">
        <table class="min-w-full text-sm border border-gray-200">
            <thead class="bg-gray-100 text-gray-700">
                <tr>
                    <th class="text-left px-4 py-2 border-b border-gray-200">Product Name</th>
                    <th class="text-left px-4 py-2 border-b border-gray-200">Quantity</th>
                    <th class="text-left px-4 py-2 border-b border-gray-200">Price</th>
                    <th class="text-left px-4 py-2 border-b border-gray-200">Subtotal</th>
                </tr>
            </thead>

            <tbody>
            {% for cartHistory in order.cartHistories %}
            <tr>
                <td class="px-4 py-2">{{ cartHistory.productName }}</td>
                <td class="px-4 py-2">{{ cartHistory.quantity }}</td>
                <td class="px-4 py-2">${{ cartHistory.productPrice }}</td>
                <td class="px-4 py-2 font-medium text-gray-800">${{ cartHistory.subtotal }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="pt-4 text-sm text-gray-600">
    <p>Thank you for shopping with us!</p>
</div>

    </div>

</div>

<script>
    function printInvoice() {
        const content = document.getElementById("invoice").innerHTML;
        const win = window.open("", "Print Invoice", "width=900,height=700");

        win.document.write(`
            <html>
            <head>
                <title>Invoice</title>
                <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
                <style>
                    body { padding: 2rem; }
                </style>
            </head>
            <body>
                ${content}
            </body>
            </html>
        `);

        win.document.close();
        win.print();
    }
</script>

{% endblock %}